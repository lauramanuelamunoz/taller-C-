@model IEnumerable<CRUDNativo.Models.Cliente>

<div>
    <h2>Lista de Clientes</h2>
    <a class="btn btn-success d-block" asp-action="Create" asp-controller="Cliente">Crear Nuevo Cliente</a>
</div>

<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(c => c.ClienteId)</td>
                <td>@Html.DisplayNameFor(c => c.Nombre)</td>
                <td>@Html.DisplayNameFor(c => c.Apellido)</td>
                <td>@Html.DisplayNameFor(c => c.DocumentoIdentidad)</td>
                <td>@Html.DisplayNameFor(c => c.CorreoElectronico)</td>
                <td>@Html.DisplayNameFor(c => c.Telefono)</td>
                <td>@Html.DisplayNameFor(c => c.Direccion)</td>
                <td>Acciones</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ClienteId</td>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido</td>
                    <td>@item.DocumentoIdentidad</td>
                    <td>@item.CorreoElectronico</td>
                    <td>@item.Telefono</td>
                    <td>@item.Direccion</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edite" asp-controller="Cliente" asp-route-id="@item.ClienteId">Editar</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Cliente" asp-route-id="@item.ClienteId">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
